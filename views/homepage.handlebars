      <a href="/blogs/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>Created by {{blog.User.name}} on {{blog.CreatedAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.content}}
    </p>
  </div>
</div>
