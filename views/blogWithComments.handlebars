<div class="text-center" id="blog" data-id="{{id}}">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Created by {{User.name}} on {{format_date createdAt}}</p>
    <form class="form" id="new-comment">
        <div class="form-group">
            <label for="content">Comment:</label>
            <input class="form-input" type="text" id="content" name="content"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>

    {{#if comments.length}}
    <div class="col">
        {{#each comments as |comment|}}
        <div class="row">
            <p>{{comment.content}} <br>
            posted by {{comment.User.name}} on {{format_date comment.createdAt}}</p>
        </div>
        {{/each}}
    </div>
    {{/if}}

    <script src="/js/comment.js"></script>
</div>