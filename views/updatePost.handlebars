<div class="text-center" id="blog" data-id="{{id}}">
    <div class="col-md-6">
        <h3>Update your post:</h3>

        <form class="form new-blog-post-form">
        <div class="form-group">
            <label for="title">title:</label>
            <input class="form-input" type="text" id="title" name="title" value="{{title}}"/>
        </div>
        <div class="form-group">
            <label for="content">content:</label>
            <textarea class="form-input" id="content" name="content">{{content}}</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        </form>
    </div>
</div>

<script src="/js/updatePost.js"></script>